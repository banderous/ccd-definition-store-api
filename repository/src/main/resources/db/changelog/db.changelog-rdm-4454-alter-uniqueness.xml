<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="rdm-4454" author="fatih.ozceylan@hmcts.net">
        <!-- Drop old and add new unique index to the search_input_case_field table -->
        <dropUniqueConstraint constraintName="unique_search_input_case_field_case_type_id_case_field_id"
                              tableName="search_input_case_field"
                              uniqueColumns="case_type_id, case_field_id"/>

        <addUniqueConstraint columnNames="case_type_id, case_field_id, role_id"
                             constraintName="unique_search_input_case_field_case_type_id_case_field_id_role_id"
                             tableName="search_input_case_field"/>

        <!-- Drop old and add new unique index to the search_result_case_field table -->
        <dropUniqueConstraint constraintName="unique_search_result_case_field_case_type_id_case_field_id"
                              tableName="search_result_case_field"
                              uniqueColumns="case_type_id, case_field_id"/>

        <addUniqueConstraint columnNames="case_type_id, case_field_id, role_id"
                             constraintName="unique_search_result_case_field_case_type_id_case_field_id_role_id"
                             tableName="search_result_case_field"/>

        <!-- Drop old and add new unique index to the workbasket_input_case_field table -->
        <dropUniqueConstraint constraintName="unique_workbasket_input_case_field_case_type_id_case_field_id"
                              tableName="workbasket_input_case_field"
                              uniqueColumns="case_type_id, case_field_id"/>

        <addUniqueConstraint columnNames="case_type_id, case_field_id, role_id"
                             constraintName="unique_workbasket_input_case_field_case_type_id_case_field_id_role_id"
                             tableName="workbasket_input_case_field"/>

        <!-- Drop old and add new unique index to the workbasket_case_field table -->
        <dropUniqueConstraint constraintName="unique_workbasket_case_field_case_type_id_case_field_id"
                              tableName="workbasket_case_field"
                              uniqueColumns="case_type_id, case_field_id"/>

        <addUniqueConstraint columnNames="case_type_id, case_field_id, role_id"
                             constraintName="unique_workbasket_case_field_case_type_id_case_field_id_role_id"
                             tableName="workbasket_case_field"/>
    </changeSet>
</databaseChangeLog>
